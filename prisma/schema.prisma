generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  username    String
  refreshToken String @default("")
  isEmailVerified Boolean? @default(false)
  role String @default("USER")
  password String
  loginType String @default("ID_PASSWORD")
  resetPasswordToken String? 
  resetPasswordExpiry DateTime?
  emailVerificationToken String?
  emailVerificationExpiry DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  failedLoginAttempts Int  @default(0)  // Count of failed login attempts
  accountLockedUntil DateTime?  // Time until account is locked after multiple failed attempts
  status String @default("ACTIVE") // Can be "ACTIVE", "SUSPENDED", "DELETED"
}

